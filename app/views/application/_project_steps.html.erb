<% editable = editable || false %>
<section class="project-steps">
  <% @step = @step || @project.steps.first unless editable %>
  <div class="row">
    <ol class="span3 steps_nav">
      <% if editable %>
        <%= link_to edit_project_path(@project), class: "#{'active' unless @step}" do %>
          <li>How to</li>
        <% end %>
      <% end %>
      <% @project.steps.order(:position).each_with_index do |step, index| %>
        <% link_class = "active" if(@step and @step.id == step.id) %>
        <%= step_nav_link_for(@project, step, editable, link_class) %>
      <% end %>
      <% if editable %>
        <%= link_to new_project_step_path(@project) do %>
          <li class="add_step">Add step<i class="icon-plus icon-white"></i></li>
        <% end %>
      <% end %>
    </ol>
    <div class="step_content span9">
      <div class="content">
        <% if editable %>
          <% if @step %>
            <%= render 'step_form' %>
          <% else %>
            <%= render 'add_step_instructions' %>
          <% end %>
        <% else %>
          <h3><%= markdownify(@step.name).html_safe %></h3>
          <% @step.media_objects.each_with_index do |media_object, i| %>
            <% if i == 0 %>
              <%= image_tag media_object.image.url(:medium) %>
            <% else %>
              <%= image_tag media_object.image.url(:thumb) %>
            <% end %>
          <% end%>
          <p><%= markdownify(@step.content).html_safe %></p>
        <% end %>
      </div>
    </div>
  </div>
</section>

<div class="container">
  <h1>Listing users</h1>

  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Provider</th>
        <th>Uid</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.provider %></td>
          <td><%= user.uid %></td>
          <td><%= link_to 'Show', user if can_read?(user) %></td>
          <td><%= link_to 'Edit', edit_user_path(user) if can_update?(user) %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } if can_delete?(user) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

